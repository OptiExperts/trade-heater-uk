<link rel="preload" href="{{ 'tm-sidebar.css' | asset_url }}" as="style" onload="this.onload=null;this.rel='stylesheet'">
<link rel="preload" href="{{ 'component-price.css' | asset_url }}" as="style" onload="this.onload=null;this.rel='stylesheet'">

 {% if template != 'article' and template != 'blog'%}
{% if  section.settings.show_sidecategory %} 
    {% include 'tm-sidecategory' %}
{% endif %}
{% endif %}

{% if template == 'article' or template == 'blog'%}
  {% if  section.settings.show_blog_sidecategory %} 
  	{% include 'blog_sidecategory' %}
  {% endif %}
{% endif %}

 {% if template == 'collection' %}
{%- if section.settings.enable_filtering -%}
	{% include 'tm-filter' %}	
{%- endif -%}
{% endif %}


 


{% schema %}
    {
      "name": "t:sections.tm-sidebar.name",
      "settings": [
        {
          "type": "header",
          "content": "t:sections.tm-sidebar.settings.header_1.content"
        },
        {
          "type": "checkbox",
          "id": "show_sidecategory",
          "label": "t:sections.tm-sidebar.settings.show_sidecategory.label",
          "default": false
        },
        { 
          "type": "text",
          "id": "categories_title",
          "label": "t:sections.tm-sidebar.settings.categories_title.label"
        },
        {
          "type": "link_list",
          "id": "side-categories",
          "label": "t:sections.tm-sidebar.settings.side-categories.label"
        },
		{
          "type": "checkbox",
          "id": "show_blog_sidecategory",
          "label": "t:sections.tm-sidebar.settings.show_blog_sidecategory.label",
          "default": true
        },
        { 
          "type": "text",
          "id": "blog_categories_title",
          "label": "t:sections.tm-sidebar.settings.blog_categories_title.label",
		  "default":"Shop By Category"
        },
        {
          "type": "link_list",
          "id": "blog-categories",
          "label": "t:sections.tm-sidebar.settings.blog-categories.label"
        },
        {
          "type": "header",
          "content": "t:sections.tm-sidebar.settings.header_2.content"
        },
        {
          "type": "checkbox",
          "id": "enable_filtering",
          "default": true,
          "label": "t:sections.tm-sidebar.settings.enable_filtering.label",
          "info": "t:sections.tm-sidebar.settings.enable_filtering.info"
        }
      ]
   }
{% endschema %}